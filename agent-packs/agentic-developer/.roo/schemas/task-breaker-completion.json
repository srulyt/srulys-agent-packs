{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task-breaker-completion.json",
  "title": "Task Breaker Completion Response",
  "description": "Structured completion response from the Task Breaker agent",
  "type": "object",
  "required": ["status", "task_graph_path", "task_count", "summary"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["SUCCESS", "BLOCKED", "PARTIAL", "FAILED"],
      "description": "Return status to orchestrator"
    },
    "task_graph_path": {
      "type": "string",
      "description": "Path to task-graph.json artifact"
    },
    "task_contracts_directory": {
      "type": "string",
      "description": "Path to tasks/ directory with contracts"
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of task breakdown"
    },
    "task_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of tasks created"
    },
    "tasks_by_type": {
      "type": "object",
      "properties": {
        "bootstrap": { "type": "integer" },
        "development": { "type": "integer" },
        "quality": { "type": "integer" }
      },
      "description": "Task counts by type (B/D/Q)"
    },
    "phase_distribution": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "phase": { "type": "integer" },
          "task_count": { "type": "integer" },
          "task_ids": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "description": "Task distribution across phases"
    },
    "parallel_lanes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lane_id": { "type": "string" },
          "task_ids": {
            "type": "array",
            "items": { "type": "string" }
          },
          "safety_check": { "type": "string" }
        }
      },
      "description": "Identified parallel execution lanes"
    },
    "dependency_concerns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "task_id": { "type": "string" },
          "concern": { "type": "string" },
          "recommendation": { "type": "string" }
        }
      },
      "description": "Any concerns about task dependencies"
    },
    "blocker": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["unclear_plan", "circular_dependency", "missing_context"]
        },
        "description": { "type": "string" },
        "recommendation": { "type": "string" }
      },
      "description": "Blocker details (when status is BLOCKED)"
    },
    "recommendation": {
      "type": "string",
      "description": "Suggested next step for orchestrator"
    }
  }
}
